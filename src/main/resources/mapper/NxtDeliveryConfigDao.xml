<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newxton.nxtframework.dao.NxtDeliveryConfigDao">

    <resultMap id="BaseResultMap" type="com.newxton.nxtframework.entity.NxtDeliveryConfig">
        <!--@Table nxt_delivery_config-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, name
        from nxt_delivery_config
        where @NxtTenantCondition@ and id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, name
        from nxt_delivery_config
        where @NxtTenantCondition@
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, name
        from nxt_delivery_config
        <where>
                and @NxtTenantCondition@
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
        </where>
        order by id desc
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into nxt_delivery_config(@NxtTenantInsertKey@ name)
        values (@NxtTenantInsertValue@ #{name})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update nxt_delivery_config
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
        </set>
        where @NxtTenantCondition@ and id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from nxt_delivery_config where @NxtTenantCondition@ and id = #{id}
    </delete>

</mapper>